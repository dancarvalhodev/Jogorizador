{% extends "@site/layout/main.twig" %}
{% block content %}
    {% include "@site/layout/menu.twig" %}
    <div class="flex pt-8">
        <div class="w-full px-8">
            <h1 class="text-center pb-6">All Registered Roms</h1>
            <div class="text-center mb-6">
                <a class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                   href="/insert/rom">Add Rom</a>
            </div>
            {% if status %}
                <div class="mt-6 mb-6 p-8 bg-green-200 text-center rounded">
                    {{ type.0 }}
                </div>
            {% endif %}
            {% if not status is same as (NULL) and status is same as (false) %}
                <div class="mt-6 mb-6 p-8 bg-red-200 text-center rounded">
                    {% if not error is same as (NULL) %}
                        {{ error }}
                        <br>
                    {% endif %}

                    {{ type.1 }}
                </div>
            {% endif %}
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Platform</th>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Developer</th>
                        <th scope="col" class="px-6 py-3">Publisher</th>
                        <th scope="col" class="px-6 py-3">Series</th>
                        <th scope="col" class="px-6 py-3">Mode</th>
                        <th scope="col" class="px-6 py-3">Release</th>
                        <th scope="col" class="px-6 py-3">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in data %}
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <td class="px-6 py-4"><strong>{{ item.platform_name }}</strong></td>
                            <td class="px-6 py-4"><strong>{{ item.rom_name }}</strong></td>
                            <td class="px-6 py-4">{{ item.developer }}</td>
                            <td class="px-6 py-4">{{ item.publisher }}</td>
                            <td class="px-6 py-4">{{ item.series }}</td>
                            <td class="px-6 py-4">{{ item.mode }}</td>
                            <td class="px-6 py-4">{{ item.release }}</td>
                            <td class="px-6 py-4">
                                <div class="p-2"><a href="/update/rom/{{ item.id }}"><i class="fa-solid fa-pen pr-2"></i></a></div>
                                <div class="p-2"><a href="/delete/rom/{{ item.id }}"><i class="fa-solid fa-trash-can pr-2"></i></a></div>
                                <div class="p-2"><a href="/show/rom/{{ item.id }}"><i class="fa-solid fa-eye pr-2"></i></a></div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
